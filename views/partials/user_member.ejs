<div class="join-club-cont">
  <!-- Check if Logged In-->
  <% if (currentUser) { %> 
    <!-- Check if already a member-->
    <% if (currentUser.member) { %>
      <p>Welcome to the Club. Visit the <a href="/messages">Message Board</a></p>
    <!-- If not a member, prompt to fill form-->
    <% } else { %>
      <form action="" method="POST" class="join-club-form">
        <div class="join-fields-cont">
          <label for="member_code">Membership Code</label>
            <input
              type="password"
              name="member_code"
              id="member_code"
              class="join-field"
              placeholder="Membership Code"
              minlength="1"
              maxlength="100"
              required
            />
        </div>
        <div class="join-btn-cont">
          <button type="submit">Join!</button>
        </div>
      </form>
    <% } %>
  <!-- If not Logged In, prompt to sign-up/log-in-->
  <% } else { %>  
    <h2>Please Sign Up and Log In to join the Club</h2>
  <% } %>
</div>


<% if (errors) { %>
  <div class="error-cont">
    <ul class="error-list">
      <% errors.forEach(error => { %>
        <li class="error-list-item"><%= error.msg %></li>
      <% }) %>
    </ul>
  </div>
<% } %>